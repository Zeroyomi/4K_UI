	TabbedPanelItem:
		text: "Detail"
		FloatLayout:
			padding:10
			BoxLayout:
				pos_hint:{'x':.0, 'y':.9}
				size_hint:0.7,0.1
				
				Label:
					text: 'Edge Enhance'
				Switch:
					id:switch_ee
					active: True
					on_active: root.switch_ee(self.active)
					
				Label:
					text: 'FLT Sel'	
				Spinner:
					id:s_fltsel
					size_hint:1, 0.5
					pos_hint:{'x':0, 'y':.25}
					text: 'mix'
					values: ('mix', 'low', 'high')
					on_text: 
						if s_fltsel.text == "mix": root.ee_flt(2)
						elif s_fltsel.text == "low": root.ee_flt(0)
						elif s_fltsel.text == "high": root.ee_flt(1)
	
				Label:
					text: 'Show Edge'
				Switch:
					id:switch_edge
					active: False
					on_active: root.switch_edge(self.active)	
					
			BoxLayout:
				pos_hint:{'x':.7, 'y':.9}
				size_hint:0.3,0.1
				
				Label:
					text: '3D Noise Reduction'
				Switch:	
					id:switch_3dnr
					active: True
					on_active: root.switch_3dnr(self.active)
					
			BoxLayout:
				pos_hint:{'x':.0, 'y':.8}
				size_hint:0.8,0.1
				orientation: "horizontal"
				Label:
					text: 'Low Frequency'
				Label:
					text: 'High Frequency'		
			GridLayout:
				cols:5
				pos_hint:{'x':.0, 'y':.0}
				size_hint:0.8,0.8
				BoxLayout:
					orientation: "vertical"
					size_hint:0.2,1
					Label:
						text:'Gain P'
					Label:
						text:'Gain N'
					Label:
						text:'Limit P'
					Label:
						text:'Limit N'
					Label:
						text:'Coring gain'
					Label:
						text:'FTL'
				
				BoxLayout:
					orientation: "vertical"
					size_hint:0.7,1
					Slider:
						id:s_ee_gp
						min:0
						max:255
						step:16
						value:128
						disabled: 
							True if not switch_ee.active \
							else True if s_fltsel.text == "high" \
							else False 
						on_value:root.slide_ee_gp(*args)
					Slider:
						id:s_ee_gn
						min:0
						max:255
						step:16
						value:128
						disabled: 
							True if not switch_ee.active \
							else True if s_fltsel.text == "high" \
							else False 
						on_value:root.slide_ee_gn(*args)
					Slider:
						id:s_ee_lmt_p
						min:0
						max:4095
						step:32
						value:2048
						disabled: 
							True if not switch_ee.active \
							else True if s_fltsel.text == "high" \
							else False 
						on_value:root.slide_ee_lp(*args)
					Slider:
						id:s_ee_lmt_n
						min:0
						max:4095
						step:32
						value:2048
						disabled: 
							True if not switch_ee.active \
							else True if s_fltsel.text == "high" \
							else False 
						on_value:root.slide_ee_ln(*args)
					Slider:
						id:s_ee_c_g
						min:0
						max:127
						step:8	
						value:24
						disabled: 
							True if not switch_ee.active \
							else True if s_fltsel.text == "high" \
							else False 
						on_value:root.slide_ee_gain(*args)
					Slider:
						id:s_ee_level_0
						min:0
						max:14
						step:1
						value:7
						disabled: 
							True if not switch_ee.active \
							else True if s_fltsel.text == "high" \
							else False 
						on_value:root.slide_ee_flt(*args)
							
				BoxLayout:
					orientation: "vertical"
					size_hint:0.1,0.9
					Label:
						text: '{:.0f}'.format(s_ee_gp.value)
					Label:
						text:'{:.0f}'.format(s_ee_gn.value)
					Label:
						text:'{:.0f}'.format(s_ee_lmt_p.value)
					Label:
						text:'{:.0f}'.format(s_ee_lmt_n.value)
					Label:
						text:'{:.0f}'.format(s_ee_c_g.value)
					Label:
						text:'{:.0f}'.format(s_ee_level_0.value)
						
				BoxLayout:
					orientation: "vertical"
					size_hint:0.7,1
					Slider:
						id:s_ee_gp_1
						min:0
						max:255
						step:16
						value:128
						disabled: 
							True if not switch_ee.active \
							else True if s_fltsel.text == "low" \
							else False 
						on_value:root.slide_ee_gp_1(*args)
					Slider:
						id:s_ee_gn_1
						min:0
						max:255
						step:16
						value:128
						disabled: 
							True if not switch_ee.active \
							else True if s_fltsel.text == "low" \
							else False 
						on_value:root.slide_ee_gn_1(*args)
					Slider:
						id:s_ee_lmt_p_1
						min:0
						max:4095
						step:32
						value:2048
						disabled: 
							True if not switch_ee.active \
							else True if s_fltsel.text == "low" \
							else False 
						on_value:root.slide_ee_lp_1(*args)
					Slider:
						id:s_ee_lmt_n_1
						min:0
						max:4095
						step:32
						value:2048
						disabled: 
							True if not switch_ee.active \
							else True if s_fltsel.text == "low" \
							else False 
						on_value:root.slide_ee_ln_1(*args)
					Slider:
						id:s_ee_c_g_1
						min:0
						max:127
						step:8	
						value:24
						disabled: 
							True if not switch_ee.active \
							else True if s_fltsel.text == "low" \
							else False 
						on_value:root.slide_ee_gain_1(*args)
						
					Slider:
						id:s_ee_level_1
						min:0
						max:14
						step:1
						value:7
						disabled: 
							True if not switch_ee.active \
							else True if s_fltsel.text == "low" \
							else False 
						on_value:root.slide_ee_level_1(*args)
							
				BoxLayout:
					orientation: "vertical"
					size_hint:0.1,0.9
					Label:
						text: '{:.0f}'.format(s_ee_gp_1.value)
					Label:
						text:'{:.0f}'.format(s_ee_gn_1.value)
					Label:
						text:'{:.0f}'.format(s_ee_lmt_p_1.value)
					Label:
						text:'{:.0f}'.format(s_ee_lmt_n_1.value)
					Label:
						text:'{:.0f}'.format(s_ee_c_g_1.value)
					Label:
						text:'{:.0f}'.format(s_ee_level_1.value)	
						
			GridLayout:
				cols:2
				size_hint:0.2, 0.9
				pos_hint:{'x':.8, 'y':.0}
				BoxLayout:
					orientation: "vertical"
					size_hint:0.5,1
					Label:
						size_hint:1,0.1
						text:'Intensity'
					Slider:
						size_hint:1,0.8
						id:s_3dnr_int
						min:0
						max:7
						step:1
						value:3
						disabled: False if switch_3dnr.active else True 
						orientation:"vertical"	
						on_value:root.slide_3dnr_int(*args)
					Label:
						size_hint:1,0.1
						text:'{:.0f}'.format(s_3dnr_int.value)	
					
				
				BoxLayout:	
					orientation: "vertical"
					size_hint:0.5,1
					Label:
						size_hint:1,0.1
						text:'Noise Level'
					Slider:
						size_hint:1,0.8
						id:s_3dnr_noise
						min:0
						max:7
						step:1
						value:4
						disabled: False if switch_3dnr.active else True 
						orientation:"vertical"	
						on_value:root.slide_3dnr_noise(*args)
					Label:
						size_hint:1,0.1
						text:'{:.0f}'.format(s_3dnr_noise.value)	
					
				
		

	TabbedPanelItem:
		text: "Gamma"
		BoxLayout:
			spacing:50
			padding:50
			orientation: "vertical"
			BoxLayout:
				orientation: "vertical"
				Label:
					text: 'Gamma'
				Switch:
					id:switch_gamma
					active: True
					on_active: root.switch_gamma(self.active)
			BoxLayout:
				orientation: "vertical"
				Label:
					text:'Contrast'
				Label:
					text:'{:.0f}'.format(s_contrast.value)		
				Slider:
					id:s_contrast
					min:-2
					max:2
					step:1
					value:2
					on_value:root.slider_contrast(*args)
					disabled: False if switch_gamma.active else True	
			BoxLayout:
				orientation: "vertical"
				Label:
					text:'D-Range'	
				Label:
					text:
						"Low" if s_d_range.value == 0 else \ 
						"Normal" if s_d_range.value == 1 else \
						"High" if s_d_range.value== 2 else \
						"Very High" 
				Slider:
					id:s_d_range
					min:0
					max:3
					step:1
					value:1
					on_value:root.slider_d_range(*args)
					disabled: False if switch_gamma.active else True	
			BoxLayout:
				orientation: "vertical"
				Label:
					text:'Knee'	
				Label:
					text:
						"NONE" if s_knee.value == 7 else \ 
						"100%" if s_knee.value == 6 else \
						"95%" if s_knee.value== 5 else \
						"90%" if s_knee.value== 4 else \
						"85%" if s_knee.value== 3 else \
						"80%" if s_knee.value== 2 else \
						"75%" if s_knee.value== 1 else \
						"70" 
				Slider:
					id:s_knee
					min:0
					max:7
					step:1
					value:6
					on_value:root.slider_knee(*args)
					disabled: True if s_d_range.value == 0 else False if switch_gamma.active else True	
					#disabled: False if switch_gamma.active else True 
					
					
		
		
			