<MyLayout>
	do_default_tab: False
	
	size_hint: 1, 1
	
	tab_pos: "top_left"
#BASIC	
	TabbedPanelItem:
		text: "Basic"
		FloatLayout:
			padding:10
			BoxLayout:
				pos_hint:{'x':.0, 'y':.4}
				size_hint_y:0.6
				padding:50
				orientation: "vertical"
				Label:
					id:wb_label
					text: "White Balance"
				Button:
					id:wb_btn
					text: "Do One-Push White Balance"
					on_release:root.btn_wb()
				Button:
					id:wb_btn
					text: "Standard auto White Balance"
					on_release:root.btn_awb()
				Button:
					id:wb_btn
					text: "Auto-Fluorescent White Balance"
					on_release:root.btn_awb_flu()
			
			BoxLayout:
				pos_hint:{'x':.0, 'y':.2}
				size_hint_y:0.2
				padding:50
				Label:
					size_hint_x:0.2
					text: "LB shift"
				
				Slider:
					size_hint_x:0.7
					id:slide_lbshift
					min: -10
					max: 10
					step: 1
					orientation: "horizontal"
					on_value:root.slide_lbshift(*args)
				
				Label:
					size_hint_x:0.1
					text: '{:.0f}'.format(slide_lbshift.value)	
				
			BoxLayout:
				pos_hint:{'x':.0, 'y':.0}
				size_hint_y:0.2	
				Label:
					text:"Color Correction"
				Switch:	
					id:switch_cc
					active: True
					on_active: root.switch_cc(self.active)
				Label:
					text:"Flip"
				Switch:
					id:flip
					active: False
					on_active: root.switch_flip(self.active)
